{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useButtonType": "off"
			},
			"correctness": {
				"all": false
			},
			"complexity": {
				"noStaticOnlyClass": "off"
			}
		}
	},

	"formatter": {
		"enabled": true,
		"ignore": ["node_modules"]
	}
}
